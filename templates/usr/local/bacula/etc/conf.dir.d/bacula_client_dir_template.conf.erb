# PUPPETIZED

Client {
  Name = <%= scope.lookupvar('realfqdn') %>
  Address = <%= scope.lookupvar('realfqdn') %>
  FDPort = <%= @fd_port %>
  Catalog = MyCatalog
  Password = "<%= @dir_password %>"          # password for FileDaemon
#  File Retention = 30 days            # 30 days
  Job Retention = 6 months            # six months
  AutoPrune = yes                     # Prune expired Jobs/Files
}

Job {
  Name = "<%= scope.lookupvar('realfqdn') %> incremental"
  Type = Backup
  Level = Incremental
  Client = <%= scope.lookupvar('realfqdn') %>
  FileSet = "<%= scope.lookupvar('realfqdn') %>"
  Schedule = "WeeklyDaily"
  Messages = Standard
  Max Full Interval = 6 days
  Pool = <%= scope.lookupvar('realfqdn') %>
  ClientRunBeforeJob = "/root/scripts/prebacula.sh"
  ClientRunAfterJob = "/root/scripts/postbacula.sh"
  Accurate = yes
  Priority = 10
  Write Bootstrap = "/usr/local/bacula/var/bacula/working/%c.bsr"
}

Pool {
  Name = <%= scope.lookupvar('realfqdn') %>
  Storage = <%= scope.lookupvar('realfqdn') %>
  Pool Type = Backup
  Recycle = yes
  Recycle Oldest Volume = yes
  AutoPrune = yes
  Volume Retention = 28 days
  Maximum Volume Jobs = 1
  Maximum Volumes = 30
  Label Format = "<%= scope.lookupvar('realfqdn') %>-"
}

Storage {
  Name = <%= scope.lookupvar('realfqdn') %>
  Address = <%= @bu_server %>
  SDPort = <%= @sd_port %>
  Password = "<%= @sd_password %>"
  Device = <%= scope.lookupvar('realfqdn') %>
  Media Type = <%= scope.lookupvar('realfqdn') %>
}

FileSet {
  Name = <%= scope.lookupvar('realfqdn') %>
  Include {
    Options {
      signature = MD5
      compression = GZIP
      onefs = no
    }

    File = /
  }

  Exclude {
    File = /tmp
    File = /proc
    File = /dev
    File = /mnt
    File = /sys
    File = /bin
    File = /sbin
    File = /boot
    File = /cdrom
    File = /lib
    File = /lib64
    File = /media
    File = /run
    File = /swapfile1
    File = /swapfile2
    File = /swapfile3
    File = /usr/bin
    File = /usr/sbin
    File = /usr/lib
    File = /usr/games
    File = /usr/share
    File = /usr/include
    File = /usr/src
    File = /usr/local/bacula/var/bacula/working
    File = /var/backups
    File = /var/run
    File = /var/lock
    File = /var/cache
    File = /var/lib/mysql
    File = /var/lib/dpkg
    File = /var/www/chroot
    File = /.journal
    File = /.fsck
    File = "*/sites/*/s3*/*"
    File = "*/sites/s3/*"
  }
}
